<resources>
    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#000000</item> <!-- Black background -->
        <item name="colorPrimaryVariant">#222222</item> <!-- Dark gray for accents -->
        <item name="colorOnPrimary">#00FF00</item> <!-- Neon green -->
        <item name="colorSecondary">#00FF00</item>
        <item name="android:fontFamily">@font/font_family_hack</item>
    </style>

    <!-- Hacker Text Style -->
    <style name="HackerTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_family_hack</item>
        <item name="android:textColor">#00FF00</item> <!-- Neon green -->
        <item name="android:shadowColor">#00FF00</item> <!-- Glow effect -->
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">8</item> <!-- Glow intensity -->
        <item name="android:textSize">18sp</item> <!-- Text size -->
    </style>

    <!-- Hacker Button Style -->
    <style name="HackerButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/font_family_hack</item>
        <item name="android:textColor">#00FF00</item> <!-- Neon green -->
        <item name="android:textSize">20sp</item> <!-- Increased button text size -->
        <item name="android:background">@drawable/radiating_button_background</item> <!-- Glow effect -->
        <item name="android:shadowColor">#00FF00</item> <!-- Glow shadow -->
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">12</item> <!-- Stronger glow -->
        <item name="android:elevation">8dp</item> <!-- Button elevation -->
        <item name="android:padding">16dp</item> <!-- Increased padding -->
    </style>
</resources>
